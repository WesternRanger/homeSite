<!DOCTYPE html>
<html>
  <head>
      <title><%= title %></title>
      <% include meta%>
      <link rel='stylesheet' href='/stylesheets/index.css' />
      <link rel='stylesheet' href='/stylesheets/common/swiper-3.3.1.min.css' />
  </head>
  <body>
  <% include header %>
      <!--S 轮播图-->
      <div class="swiper" id="swiper" data-isswipe="1">
          <div class="hd">
              <ul class="swiper-pagination"></ul>
          </div>
          <div class="swiper-container">
              <ul class="swiper-wrapper">
                  <%[].concat(res[1]).forEach(function(item,index){%>
                  <li class="swiper-slide">
                      <a data-url="<%=item.url%>">
                          <img src="<%=item.src%>" alt="<%=item.title%>" title="<%=item.title%>"/>
                      </a>
                  </li>
                  <%})%>
              </ul>
          </div>
      </div>
      <!--E 轮播图-->
      <div class="row main-body">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">

            <!--S 最新发布 -->
            <div class="new-publish">
                <h3 style="margin:0 0 20px;">最新发布</h3>
                <div class="publish-list">
                    <% for(var i=0; i < res[0].length; i++) { %>
                    <div data-url="/page/blog?id=<%= res[0][i].id%>" class="new-item clearfix">
                        <img class="new-img hidden-xs" src="<%= res[0][i].imgurl%>" alt="">
                        <div class="new-cont">
                            <div class="new-title">
                                <a class="cat" href="/page/bloglist?type=<%= res[0][i].type %>"><%= res[0][i].cntype %><i></i></a>
                                <span><%= res[0][i].title %></span>
                            </div>
                            <div style="color:#999;font-size:12px;padding:8px 0;">
                                <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= res[0][i].date %>
                                <span class="glyphicon glyphicon-eye-open" style="margin-left:10px;"></span> 阅读(777)
                            </div>
                            <div class="preview">
                                <%= res[0][i].content %> &nbsp;......
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <!--E 最新发布 -->

        </div>

          <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
              <div class="item-block" id="intro">
                  <h3>自我介绍</h3>
                  <ul>
                      <li v-for="item in intro">
                          <span class="intro-tip">{{item.title.split('-')[0]}}:</span>
                          <a v-if="item.url" target="_blank" href="{{item.url}}">{{item.title.split('-')[1]}}</a>
                          <span v-else>{{item.title.split('-')[1]}}</span></li>
                      </li>
                  </ul>
              </div>

              <div class="item-block" id="site">
                  <h3>知名博客</h3>
                  <ul>
                      <li v-for="item in site">
                          <a target="_blank" href="{{item.url}}">{{item.title}}</a>
                      </li>
                  </ul>
              </div>

              <div class="item-block" id="blog">
                  <h3>值得一读</h3>
                  <ul>
                      <li v-for="item in blog">
                          <a target="_blank" href="{{item.url}}">{{item.title}}</a>
                      </li>
                  </ul>
              </div>

              <div class="item-block" id="music">
                  <h3>今日音乐</h3>
                  <ul>
                      <li v-for="item in music">
                          <span class="intro-tip">推荐</span>
                          <a target="_blank" href="{{item.url}}">{{item.title}}</a>
                      </li>
                  </ul>
              </div>

          </div>
      </div>
    <% include footer %>
      <script src="/javascripts/common/swiper-3.3.1.jquery.min.js"></script>
      <script src="/javascripts/common/vue.min.js"></script>
      <script src="/javascripts/index.js"></script>
  </body>
</html>
