<% include footer %>
<script src="/javascripts/common/jquery.min.js"></script>
<script src="/javascripts/common/react.min.js"></script>
<script src="/jsxParseFile/blog.js"></script>

<script type="text/javascript" src="/javascripts/common/showdown.js"></script>
<script>
    function Warpper(){
        this.warp = $("#showdown-text");
    }
    $.extend(Warpper.prototype,{
        init:function(){
            this.alert();
            this.compile();
        },
        alert:function(){
            this.warp.on("click",this,function(){
                console.log("444");
            })
        },
        compile:function(){
            var _text = this.warp.html(),
                _converter = new showdown.Converter(),
                _html = _converter.makeHtml(_text);
            this.warp.html(_html);
            this.warp.css("opacity",1)
        }
    })
    new Warpper().init();// 事件操作预加载

</script>
</body>
</html>
